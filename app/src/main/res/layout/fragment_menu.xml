<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@drawable/fragment_border_drawable">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:orientation="horizontal">

            <android.support.v7.widget.Toolbar
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@color/colorPrimaryDark"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_menu_white_24dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">



            <TextView
                android:id="@+id/github_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GITHUB"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_github"
                android:background="@drawable/menu_like_textview"/>

            <TextView
                android:id="@+id/share_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SHARE"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:drawableRight="@drawable/ic_share_black_24dp"
                android:background="@drawable/menu_like_textview"/>

            <TextView
                android:id="@+id/page_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRASILABS"
                android:padding="20dp"
                android:drawableRight="@drawable/ic_info_black_24dp"
                android:background="@drawable/menu_like_textview"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <TextView
                android:id="@+id/exit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EXIT"
                android:padding="20dp"
                android:drawableRight="@drawable/ic_exit_to_app_black_24dp"
                android:background="@drawable/menu_like_textview"/>


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

